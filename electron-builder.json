{
  "appId": "com.tesla.infotainment",
  "productName": "Tesla Infotainment System",
  "directories": {
    "output": "dist",
    "buildResources": "assets"
  },
  "files": ["dist/main", "dist/preload", "dist/renderer", "node_modules", "package.json"],
  "win": {
    "target": ["nsis", "portable"],
    "icon": "assets/icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "mac": {
    "target": ["dmg", "zip"],
    "icon": "assets/icon.icns"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "assets/icon.png"
  }
}
